@model IEnumerable<Logbook_System.DB.Student_Eval>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

<div class="container">
    <h2>Student Evaluation List</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table table-striped table-hover">
        <tr style="background:#2a398c !important; color:#2a398c;">
            <th>
                @Html.DisplayNameFor(model => model.WorkplaceExperience)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LearningProcess)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CommunicationSkills)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccomodationOfLearners)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LearnerProblemSolving)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FinalJudgement)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comments)
            </th>
    
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.WorkplaceExperience)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LearningProcess)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CommunicationSkills)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AccomodationOfLearners)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LearnerProblemSolving)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FinalJudgement)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comments)
                </td>
   
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                </td>
            </tr>
        }

    </table>
    </div>